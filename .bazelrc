# Common configuration for all platforms
build --enable_platform_specific_config

# Windows-specific configuration
build:windows --spawn_strategy=local
build:windows --strategy=Genrule=local
build:windows --enable_runfiles
build:windows --experimental_convenience_symlinks=ignore

# Unix-specific configuration (Linux and macOS)
build:unix --spawn_strategy=sandboxed
build:unix --strategy=Genrule=sandboxed
