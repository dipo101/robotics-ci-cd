# Windows-specific configuration
startup --output_user_root=C:/bazel/output
startup --output_base=C:/bazel/output/base

# Use absolute paths on Windows
build --experimental_convenience_symlinks=ignore
build --experimental_no_product_name_out_symlink

# Disable sandboxing on Windows
build --spawn_strategy=local

# Use local execution
build --strategy=Genrule=local

# Windows path handling
startup --windows_enable_symlinks
build --enable_runfiles
